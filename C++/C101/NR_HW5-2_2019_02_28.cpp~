#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
  int Num1, Num2;
  char Opr, YesNo='y';
  cout << "\nINTEGER CALCULATOR 1.0\n";
  while ( (YesNo=='y') || (YesNo=='Y') )
    {
      cout << "\nNEW OPERATION\n";
      cout << "First integer      : ";
      cin >> Num1;
      cout << "Second integer     : ";
      cin >> Num2;
      cout << "Operand (+ - * / %): ";
      cin >> Opr;
      switch (Opr)
	{
	case '+': cout << Num1 << Opr << Num2 << "=" << Num1+Num2; break;
	case '-': cout << Num1 << Opr << Num2 << "=" << Num1-Num2; break;
	case '*': cout << Num1 << Opr << Num2 << "=" << Num1*Num2; break;
	case '/': cout << Num1 << Opr << Num2 << "=" << Num1/Num2; break;
	case '%': cout << Num1 << Opr << Num2 << "=" << Num1%Num2; break;
	case '0': NewOp=0; break;
	default: cout << "ERROR: INVALID OPERAND\n";
	}
      cout << "\nWould you like to perform another operation? (Y N): ";
      cin >> YesNo;
    }  
  cout << "\nGoodbye!\n";
}


